<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tv_reciver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="@color/braoun"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="14dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="4"
            android:id="@+id/tv_message_text"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/second"
            android:text="00"
            android:padding="2dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="KH"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/image_circle"/>

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="00"
                android:textSize="10sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="@color/dark_prime"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="14dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/message_img_sender"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/image_circle"
                android:gravity="center"
                android:text="KH"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_message_time_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_message_text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="00"
            android:textColor="@color/second"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>